[
  {
    "name": "expr_function_POW",
    "do": [
      {
        "@do": "merge",
        "action": "select",
        "select": {
          "columns": {
            "e": {
              "type": "function",
              "function": "POW",
              "args": [
                2,
                3
              ]
            },
            "alias": "x"
          }
        },
        "use_strings": true
      },
      {
        "@do": "flattenSelect"
      },
      {
        "@do": "equals",
        "@value": [
          {
            "x": "8.0"
          }
        ]
      }
    ],
    "#": "function operates with decimals"
  },
